@model Person
@{
    ViewBag.Title = "ChangePasswordSucc";
}

@using (Html.BeginForm("updatepassword", "Home", Model, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" style="padding-top : 150px">
        <h1 style="color:red">@ViewBag.Msg</h1>
        <h4> @UTW_Project.Resources.MyTexts.EnterYourPassword </h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label(@UTW_Project.Resources.MyTexts.Question, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h4 style="color:black">@ViewBag.Q</h4> 
            </div>
        </div>
        <h4> @UTW_Project.Resources.MyTexts.EnterYourAnswer</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Answer, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding-top : 15px">
                    <input type="submit" value=@UTW_Project.Resources.MyTexts.Submit class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

